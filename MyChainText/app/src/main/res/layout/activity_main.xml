<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#EEF0F0"
        android:gravity="end"
        android:text=""
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="3dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="C"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/plus_minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_s" />

    <TextView
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_margin="3dp"
        android:layout_marginTop="38dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="-"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number9"
        app:layout_constraintTop_toBottomOf="@+id/number4" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="2"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/number3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number1"
        app:layout_constraintTop_toBottomOf="@+id/cancel" />

    <TextView
        android:id="@+id/number9"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:layout_marginTop="38dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="9"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number8"
        app:layout_constraintTop_toBottomOf="@+id/number4" />

    <TextView
        android:id="@+id/number7"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="7"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/number8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number4" />

    <TextView
        android:id="@+id/number5"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:layout_marginTop="29dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="5"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/number6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number4"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <TextView
        android:id="@+id/precent"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="%"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/splitup"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plus_minus"
        app:layout_constraintTop_toBottomOf="@+id/name_s" />

    <TextView
        android:id="@+id/number8"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="8"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/number9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number7"
        app:layout_constraintTop_toBottomOf="@+id/number4" />

    <TextView
        android:id="@+id/number1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="1"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/number2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel" />

    <TextView
        android:id="@+id/number3"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:layout_marginTop="17dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="3"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/multiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number2"
        app:layout_constraintTop_toBottomOf="@+id/cancel" />

    <TextView
        android:id="@+id/multiply"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_margin="3dp"
        android:layout_marginTop="17dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="x"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number3"
        app:layout_constraintTop_toBottomOf="@+id/cancel" />

    <TextView
        android:id="@+id/number6"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:layout_marginTop="29dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="6"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number5"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <TextView
        android:id="@+id/splitup"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="/"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/precent"
        app:layout_constraintTop_toBottomOf="@+id/name_s" />

    <TextView
        android:id="@+id/number4"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="4"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/number5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <TextView
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_margin="3dp"
        android:layout_marginTop="29dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="+"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number6"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <TextView
        android:id="@+id/plus_minus"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="+/-"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/precent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/name_s" />

    <TextView
        android:id="@+id/number0"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/point"
        app:layout_constraintHorizontal_weight="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number7" />

    <TextView
        android:id="@+id/point"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="."
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/equally"
        app:layout_constraintHorizontal_weight="0.48"
        app:layout_constraintStart_toEndOf="@+id/number0"
        app:layout_constraintTop_toBottomOf="@+id/number7" />

    <TextView
        android:id="@+id/equally"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_margin="3dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="="
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.48"
        app:layout_constraintStart_toEndOf="@+id/point"
        app:layout_constraintTop_toBottomOf="@+id/number7" />

    <TextView
        android:id="@+id/name_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:text="S"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/name_a"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/name_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:text="A"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/name_v"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/name_s"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/name_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:text="V"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/name_e"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/name_a"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/name_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:text="E"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/name_l"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/name_v"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/name_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:text="L"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/name_y"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/name_e"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/name_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:text="Y"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/name_e2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/name_l"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/name_e2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:text="E"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/name_v2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/name_y"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/name_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:text="V"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/name_e2"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


</androidx.constraintlayout.widget.ConstraintLayout>