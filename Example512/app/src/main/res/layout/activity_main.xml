<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/foncalc">
</ImageView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calcLayout"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/string0"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btnSettings"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Settings"
            />
        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#EEF0F0"
            android:gravity="right"
            android:text=""
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/string1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/number1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/number2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="2"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/number3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="3"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/string2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/number4"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="4"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/number5"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="5"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/number6"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="6"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/string3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/number7"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="7"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/number8"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="8"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/number9"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="9"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/string4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/number0"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="2.05"
            android:text="0"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="."
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
    </LinearLayout>

</LinearLayout>
</FrameLayout>