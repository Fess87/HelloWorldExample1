<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@id/ingenerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#FFC107"
        android:visibility="invisible"
        android:text="Ing view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@id/simpleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#FFC107"
        android:visibility="invisible"
        android:text="Ing view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#EEF0F0"
        android:gravity="end"
        android:text=""
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/cancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="C"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/plus_minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exclamation"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@id/minus"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number9"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <TextView
        android:id="@id/number2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number1"
        app:layout_constraintTop_toBottomOf="@+id/plus_minus" />

    <TextView
        android:id="@id/number9"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number8"
        app:layout_constraintTop_toBottomOf="@+id/number6" />

    <TextView
        android:id="@id/number7"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exponent"
        app:layout_constraintTop_toBottomOf="@+id/number4" />

    <TextView
        android:id="@id/number5"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number4"
        app:layout_constraintTop_toBottomOf="@+id/number2" />

    <TextView
        android:id="@id/precent"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="%"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/splitup"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plus_minus"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@id/number8"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number7"
        app:layout_constraintTop_toBottomOf="@+id/number5" />

    <TextView
        android:id="@id/number1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tan"
        app:layout_constraintTop_toBottomOf="@+id/cancel" />

    <TextView
        android:id="@id/number3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/multiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number2"
        app:layout_constraintTop_toBottomOf="@+id/precent" />

    <TextView
        android:id="@id/multiply"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="x"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number3"
        app:layout_constraintTop_toBottomOf="@+id/splitup" />

    <TextView
        android:id="@id/number6"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number5"
        app:layout_constraintTop_toBottomOf="@+id/number3" />

    <TextView
        android:id="@id/splitup"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/precent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@id/number4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rootsquare"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <TextView
        android:id="@id/plus"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="27dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number6"
        app:layout_constraintTop_toBottomOf="@+id/multiply" />

    <TextView
        android:id="@id/plus_minus"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="+/-"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/precent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


    <TextView
        android:id="@id/number0"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/point"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1.01"
        app:layout_constraintStart_toEndOf="@+id/backspace"
        app:layout_constraintTop_toBottomOf="@+id/number7" />

    <TextView
        android:id="@id/point"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="."
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/equally"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.49"
        app:layout_constraintStart_toEndOf="@+id/number0"
        app:layout_constraintTop_toBottomOf="@+id/number9" />

    <TextView
        android:id="@id/equally"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.49"
        app:layout_constraintStart_toEndOf="@+id/point"
        app:layout_constraintTop_toBottomOf="@+id/minus" />

    <TextView
        android:id="@id/openBracket"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="("
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/closeBracket"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@id/cos"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="cos"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/tan"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sin"
        app:layout_constraintTop_toBottomOf="@+id/closeBracket" />

    <TextView
        android:id="@id/exponent"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="^"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exp"
        app:layout_constraintTop_toBottomOf="@+id/rootsquare" />


    <TextView
        android:id="@id/pi"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Pi"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/exp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln" />

    <TextView
        android:id="@id/log"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="27dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="log"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/rootsquare"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ln"
        app:layout_constraintTop_toBottomOf="@+id/cos" />

    <TextView
        android:id="@id/exclamation"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="!"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/cancel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/closeBracket"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


    <TextView
        android:id="@id/exp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="e"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/exponent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pi"
        app:layout_constraintTop_toBottomOf="@+id/log" />

    <TextView
        android:id="@id/sin"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="sin"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/cos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openBracket" />

    <TextView
        android:id="@+id/tan"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="tan"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cos"
        app:layout_constraintTop_toBottomOf="@+id/exclamation" />

    <TextView
        android:id="@id/rootsquare"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="√"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/log"
        app:layout_constraintTop_toBottomOf="@+id/tan" />

    <TextView
        android:id="@id/ln"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="27dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="ln"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/log"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sin" />

    <TextView
        android:id="@id/closeBracket"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text=")"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/exclamation"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/openBracket"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@id/inv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="INV"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/rad"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pi" />

    <TextView
        android:id="@id/rad"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="RAD"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/backspace"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.49"
        app:layout_constraintStart_toEndOf="@+id/inv"
        app:layout_constraintTop_toBottomOf="@+id/exp" />

    <TextView
        android:id="@id/backspace"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Back"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.49"
        app:layout_constraintStart_toEndOf="@+id/rad"
        app:layout_constraintTop_toBottomOf="@+id/exponent" />

</androidx.constraintlayout.widget.ConstraintLayout>