<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/string0"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="#EEF0F0"
            android:gravity="right"
            android:text=""
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/string1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/string0"
        android:layout_toLeftOf="@id/splitup"

        >
        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="C"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/plus_minus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="+/-"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/precent"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="%"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/string2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/string1"
        android:layout_toLeftOf="@id/multiply"


        >
        <TextView
            android:id="@+id/number1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/number2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="2"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/number3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="3"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/string3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/string2"
        android:layout_toLeftOf="@id/plus"
        >
        <TextView
            android:id="@+id/number4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="4"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/number5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="5"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />


        <TextView
            android:id="@+id/number6"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="6"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/string4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/string3"
        android:layout_toLeftOf="@id/minus"
        >
        <TextView
            android:id="@+id/number7"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="7"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/number8"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="8"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />


        <TextView
            android:id="@+id/number9"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="9"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/string5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/string4"
        android:layout_toLeftOf="@id/equally"
        >
        <TextView
            android:id="@+id/number0"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="2.05"
            android:text="0"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="."
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="3dp"
            android:textSize="40sp"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/plus"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:text="+"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_margin="3dp"
        android:textSize="40sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/string2"
        />

    <TextView
        android:id="@+id/multiply"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:text="x"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_margin="3dp"
        android:textSize="40sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/string1"
        />

    <TextView
        android:id="@+id/equally"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:text="="
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_margin="3dp"
        android:textSize="40sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/string4"
        />
    <TextView
        android:id="@+id/minus"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:text="-"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_margin="3dp"
        android:textSize="40sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/string3"
        />

    <TextView
        android:id="@+id/splitup"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:text="/"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_margin="3dp"
        android:textSize="40sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/string0"
        />


</RelativeLayout>